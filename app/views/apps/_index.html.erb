<h1>Listing apps</h1>

<table align="center" border=1  width="60%" cellpadding=13>
  <tr>
    <th>Name</th>
    <th>Framework</th>
    <th>Instances</th>
    <th>Memory</th>
    <th>URL</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @apps.each do |app| %>
      <tr id="<%= "app_#{app.id}" %>">
        <td ><%= app.name %></td>
        <td><%= app.framework %></td>
        <td><%= app.instances %></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>
</table>

